#include<stdio.h>
#include<stdib.h>
int main() {
float x,y;
Char operator,again;
do{
printf("Enter the 2 numbers :\n");
scanf("%f %f", &x,&y);
printf("Enter an operator:\n");
lush(stdin);
scanf("%c" , &operator);
   if(operator=='+')
   {
      printf("\n Sum=%f",x+y);
   }
   else if(operator=='-');
   {
      printf("\n Difference=%f",x-y);
   }
   else if(operator=='*');
   { 
      printf("\n Multiplication=%f",x*y);
   }
   else if(operator=='/');
   {
      printf("\n Division=%f",x/y);
   }
   else
   {
      printf("\n Invalid Entry");
   }
 
   printf("\n Type A to again use it and B to exit");
   scanf("%c",&again);
   }
   
   while(again=='A' && again!='B')
   printf("%c", again);
   getchar();
   return 0;
}
